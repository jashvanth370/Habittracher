{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-native", // enables JSX
    "moduleResolution": "node",
    "esModuleInterop": true, // solves default import issues
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}